<% if %w(fresh processing pending_payment awaiting_shipment).include?(@order.status) %>
	<% if action_name == 'edit' %>
		swal({
			title: 'Success',
			text: "Your order is completed",
			type: 'success',
			confirmButtonText: 'Done',
			confirmButtonClass: 'btn btn-brown text-uppercase',
			buttonsStyling: false
		}).then(function (result) {
			if (result) {
				window.location = '<%= user_weekly_meals_path %>';
			}
		});
	<% else %>
		swal({
			title: 'Success',
			text: "Your order is completed",
			type: 'success',
			confirmButtonText: 'Done',
			confirmButtonClass: 'btn btn-brown text-uppercase',
			buttonsStyling: false
		}).then(function (result) {
			if (result) {
				window.location = '<%= user_weekly_meals_path %>';
			}
		});
	<% end %>
<% else %>
	swal({
		title: 'Oops...',
		text: "Something went wrong",
		type: 'error',
		confirmButtonText: 'Done',
		confirmButtonClass: 'btn btn-brown text-uppercase',
		buttonsStyling: false
	});
<% end %>