<% text = "Loading..." unless text.present? %>
<div class="overlay">
  <div class="pulse_loader"></div>
  <span class="pulse_loader_text"><%= text %></span>
</div>

<%= content_for :footer_js do %>
  <%= javascript_tag do %>
    document.addEventListener('DOMContentLoaded', function() {
      pulse_loader.stop();
    });
  <% end %>
<% end %>
