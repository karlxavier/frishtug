<%= form_with url: [:admin, @blackout_date], model: @blackout_date, local: true do |f| %>
  <div class="form-group">
    <%= f.select :month, @month_names, {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.number_field :day, min: 1, max: 31, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.text_field :description, placeholder: 'Description', class: 'form-control' %>
  </div>
  <%= f.submit 'Save Changes', class: 'btn btn-matterhorn text-uppercase' %>
<% end %>