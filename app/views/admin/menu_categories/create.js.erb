var flash = document.getElementById('form-flash-messages');
var modal = $('.modal');
if (modal.length) {
  modal.animate({ scrollTop: 0 }, 'slow');
  flash.innerHTML = '<%= j render 'shared/flash' %>';
} else {
  <%= render 'admin/shared/response', object: @menu_category %>
  $("html, body").animate({ scrollTop: 0 }, "slow");
}
