<%= card_container do %>
  <table class="table table-sm">
    <thead>
      <tr>
        <th><%= sortable column: 'first_name' %></th>
        <th><%= sortable column: 'last_name' %></th>
        <th><%= sortable column: 'email' %></th>
        <th><%= sortable column: 'created_at', title: 'Date' %></th>
      </tr>
    </thead>
    <tbody>

      <% @inactive_users.each do |user| %>
        <tr>
          <td><%= user.first_name.titleize %></td>
          <td><%= user.last_name.titleize %></td>
          <td>
            <%= mail_to user.email, class: 'chocolate-font-color' do %>
              <i class="fa fa-envelope"></i>
              <%= user.email %>
            <% end %>
          </td>
          <td>
            <%= user.created_at.strftime('%B %d, %Y') %>
          </td>
        </tr>
      <% end %>

    </tbody>
  </table>
  <%= paginate @inactive_users %>
<% end %>
