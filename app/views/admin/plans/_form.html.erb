<%= form_for [:admin, plan], remote: true do |form| %>
  <%= render 'shared/error_explanation', object: plan %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.trix_editor :description %>
  </div>
  <div class="form-group">
    <%= form.label :price %>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1">$</span>
      <%= form.number_field :price, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :shipping %>
    <%= form.select :shipping, [:free, :paid] , {}, { class: 'form-control plan-shipping' } %>
  </div>
  <div class="form-group d-none plan-shipping-fee fadeInUp">
    <%= form.label :shipping_fee %>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1">$</span>
      <%= form.number_field :shipping_fee, class: 'form-control' %>
    </div>
  </div>
  <div class="actions">
    <%= form.submit 'Save', class: 'btn btn-brown float-right' %>
  </div>
<% end %>

<%= content_for :footer_js do %>
  <%= javascript_pack_tag 'admin/plans' %>
<% end %>