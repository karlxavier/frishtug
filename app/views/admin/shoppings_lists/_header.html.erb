<div class="row mx-0">
  <div class="col">
    <h1 id="title">
      <%= link_to "Shopping List", '#' %>
    </h1>
  </div>
  <div class="col">
    <ul class="list-inline list-unstyled float-right nav nav-pills" role="tablist">
      <li class="list-inline-item">Filter by:</li>
      <li class="list-inline-item">
        <a class="btn btn-sm btn-brown-outline-circled font-size-14"
          data-toggle="tab" role="tab"
          aria-controls="date-filter-tab" aria-selected="false"
          id="date-tab-item"
          href="#date-filter-tab">Date Filter</a>
      </li>
    </ul>
  </div>
</div>

<div class="row justify-content-center">
  <div class="tab-content">
      <div class="tab-pane fade admin-dashboard__calendar filter_container" id="date-filter-tab" role="tabpanel">
          <div class="admin-dashboard__calendar_container">
              <%= render 'admin/calendars/calendar', date: Date.current, selected_date: @date  %>
          </div>
          <%= link_to 'Apply Filter',  admin_shoppings_lists_path(date: @date), class: 'btn btn-brown', id: 'filter-date-btn' %>
          <%= link_to 'Cancel', 'javascript:void(0)', class: 'close-active-tab btn btn-outline-secondary', data: {
            target_tablist: '#date-tab-item'
          } %>
      </div>
    </div>
</div>