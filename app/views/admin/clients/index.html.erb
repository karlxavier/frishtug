<%= card_container do %>
  <div class="row mx-0">
    <div class="col">
      <table class="table table-sm">
        <thead>
          <tr>
            <th>#</th>
            <th>Full Name</th>
            <th>Full Address</th>
            <th>Contact Number</th>
            <th>Plan</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr class="user_id_<%= user.id %>">
              <td><%= user.id %></td>
              <td><%= user.full_name %></td>
              <td><%= user.full_address %></td>
              <td><%= user.contact_number_phone_number %></td>
              <td><%= user.plan_name %></td>
              <td>
                <%= link_to admin_client_path(user), class: 'btn chocolate-font-color btn-sm' do %>
                  <i class="fa fa-eye"></i> View
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @users %>
    </div>
  </div>
<% end %>