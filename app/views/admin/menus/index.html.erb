<div class="row">
  <div class="col">
    <h1 id="title">Your Menus</h1>
  </div>
  <div class="col">
    <%= link_to "+ Add Category", '#', class: 'add-category-btn float-right',
      data: {
        toggle: 'modal',
        target: '#add-category-modal'
      }
    %>
  </div>
</div>

<%= render 'admin/menu_categories/form_modal', menu_category: @menu_category %>
<%= render 'admin/menu_categories/navs', menu_category: @menus %>

<div class="tab-content" id="myTabContent">
  <% @menus.each.with_index do |category, index| %>
    <div class="tab-pane fade <%= 'show active' if index == 0 %>" id="category_<%= category.id %>" aria-expanded="<%= index == 0 %>">
      <div class="row">
        <%= link_to '+ Add Menu Item', '#', class: 'add-menu-item btn btn-brown-outline',
          data: {
            toggle: 'modal',
            target: "#add-menu-item-modal-#{category.id}"
          }
         %>
        <% category.menus.sort.each do |menu| %>
          <%= render 'menu_card', menu: menu %>
        <% end %>
      </div>
    </div>
    <%= render 'form_modal', menu: Menu.new, category_id: category.id %>
  <% end %>
</div>

<%= content_for :header_js do %>
  <%= javascript_pack_tag 'admin/simple_dropzone' %>
  <%= javascript_pack_tag 'admin/vue_category' %>
<% end %>
