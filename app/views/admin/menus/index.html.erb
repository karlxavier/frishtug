<h1 id="title">Your Menus</h1>
<%= link_to "+ Add Category",
  '#', class:
  'add-category-btn',
  data: {
    toggle: 'modal',
    target: '#add-category-modal'
  }
%>
<%= render 'admin/menu_categories/form_modal', menu_category: @menu_category %>
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Image</th>
      <th>Name</th>
      <th>Category</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.id %></td>
        <td><%= image_tag(menu.image_url(:thumb)) if menu.image?%></td>
        <td><%= menu.name %></td>
        <td><%= menu.menu_category_id %></td>
        <td><%= link_to 'Show', admin_menu_url(menu) %></td>
        <td><%= link_to 'Edit', edit_admin_menu_path(menu) %></td>
        <td><%= link_to 'Destroy', admin_menu_url(menu), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Menu', new_admin_menu_path %>
<%= content_for :header_js do %>
  <%= javascript_pack_tag 'admin/vue_category' %>
<% end %>
