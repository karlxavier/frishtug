<p id="notice"><%= notice %></p>
<h1>Menus</h1>
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Category</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.id %></td>
        <td><%= menu.name %></td>
        <td><%= menu.menu_category_id %></td>
        <td><%= link_to 'Show', admin_menu(menu) %></td>
        <td><%= link_to 'Edit', edit_admin_menu_path(menu) %></td>
        <td><%= link_to 'Destroy', admin_menu(menu), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Menu', new_admin_menu_path %>
