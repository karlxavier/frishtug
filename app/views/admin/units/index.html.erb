<%= card_container do %>
  <table class="table table-sm">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @units.each do |unit| %>
        <tr data-id="<%= unit.id %>" class="<%= unit.name.parameterize %>">
          <td><%= unit.id %></td>
          <td><%= unit.name %></td>
          <td>
            <div class="float-right">
              <%= link_to '<i class="fa fa-edit"></i>Edit'.html_safe, edit_admin_unit_path(unit), class: 'btn chocolate-font-color btn-sm' %>
              <%= link_to '<i class="fa fa-trash"></i>Destroy'.html_safe, admin_unit_path(unit), class: 'btn chocolate-font-color btn-sm', method: :delete, remote: true, data: { confirm: 'Are you sure?' } %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
<% end %>