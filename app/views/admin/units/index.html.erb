<%= card_container do %>
  <table class="table table-striped">
    <thead class="thead-inverse">
      <tr>
        <th>#</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @units.each do |unit| %>
        <tr data-id="<%= unit.id %>" class="<%= unit.name.parameterize %>">
          <td><%= unit.id %></td>
          <td><%= unit.name %></td>
          <td><%= link_to 'Edit', edit_admin_unit_path(unit) %></td>
          <td><%= link_to 'Destroy', admin_unit_path(unit), method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
<% end %>