<%= form_with model: [:admin, unit], class: 'col-12 col-md-4 col-lg-3', remote: true do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= form.submit "Save", class: 'btn btn-brown' %>
  </div>
<% end %>
