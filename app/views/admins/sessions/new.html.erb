
<%= full_width_jumbotron do %>
  <div class="row justify-content-center">
    <div class="col-4 col-md-4 col-lg-3">
      <h1 class="text-center">Log In</h1>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, class: 'form-control rounded-0 mb-3', placeholder: 'Email' %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", class: 'form-control rounded-0 mb-3', placeholder: 'password' %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions mx-auto col-6">
          <%= f.submit "Log in", class: 'text-uppercase btn btn-brown px-4' %>
        </div>
      <% end %>

      <%# render "users/shared/links" %>
    </div>
  </div>
<% end %>