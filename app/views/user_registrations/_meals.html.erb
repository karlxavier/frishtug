<div class="row">
  <div :class="shopping_cart_shown ? 'col-md-9' : 'col'" v-if="interval === 'month'">
    <div class="menu-items__container_for_five_days">
      <%= render 'scheduled_orders' %>
      <a href="javascript:void(0)"
        class="btn btn-outline-dark btn-sm font-size-12 shopping-cart__shown_btn"
        @click="showShoppingCart"
        v-if="!shopping_cart_shown">
        Show Meals
      </a>
    </div>
  </div>

  <div :class="shopping_cart_shown ? 'col-md-9' : 'col'" v-else>
    <a href="javascript:void(0)"
      class="btn btn-outline-dark btn-sm font-size-12 shopping-cart__shown_btn"
      @click="showShoppingCart"
      v-if="!shopping_cart_shown">
      Show Meals
    </a>
    <div id="single_order" class="mt-3 menu-item__container">
      <%= render 'single_orders' %>
    </div>
  </div>
</div>
