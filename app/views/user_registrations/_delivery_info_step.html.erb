<div class="row justify-content-center align-items-center">
  <div class="col-12 col-md-3">
    <h3 class="text-uppercase">Delivery Information</h3>
    <div class="form-group">
      <% registration.address_types.each do |type| %>
        <label for="<%= type.to_s.parameterize %>">
          <%= form.radio_button :location_at, type, id: "#{type.to_s.parameterize}", class: '', checked: (true if type == :at_work) %>
          <%= type.to_s.humanize %>
        </label>
      <% end %>
    </div>
    <div class="form-group">
      <%= form.text_field :line1, class: 'form-control', placeholder: 'Address Line 1', 'v-model': 'billing_address.address_line1' %>
      <div class="invalid-feedback">
        Line1 is required
      </div>
    </div>
    <div class="form-group">
      <%= form.text_field :line2, class: 'form-control', placeholder: 'Address Line 2', 'v-model': 'billing_address.address_line2' %>
    </div>
    <div class="form-group">
      <%= form.text_field :front_door, class: 'form-control', placeholder: 'Front Door Code (if applicable)' %>
    </div>
    <div class="form-group row">
      <div class="col">
        <%= form.text_field :city, class: 'form-control', placeholder: 'City', 'v-model': 'billing_address.address_city' %>
        <div class="invalid-feedback">
          City is required
        </div>
      </div>
      <div class="col">
        <%= form.text_field :state, class: 'form-control', placeholder: 'State', 'v-model': 'billing_address.address_state' %>
        <div class="invalid-feedback">
          State is required
        </div>
      </div>
    </div>
    <div class="form-group row">
      <div class="col">
        <%= form.text_field :zip_code, class: 'form-control', placeholder: 'Zipcode', 'v-model': 'billing_address.address_zip' %>
        <div class="invalid-feedback">
          Zipcode is required
        </div>
      </div>
      <div class="col">
        <%= form.text_field :phone_number, class: 'form-control', placeholder: 'Phone Number' %>
        <div class="invalid-feedback">
          Phone Number is required
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= form.text_field :group_code, class: 'form-control', placeholder: 'Group Code' %>
    </div>
    <a href="javascript:void(0)" class="btn btn-brown btn-block text-uppercase" @click="nextTab">Next</a>
  </div>
</div>