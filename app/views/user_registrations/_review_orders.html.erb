<div class="row justify-content-center" id="review_order">
  <div class="col-md-4">
    <div class="errors" v-if="error_messages.length > 0">
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Opps!..</strong>
        {{ error_messages }}
      </div>
    </div>
    <h1>Review Order</h1>

    <h4>Order Summary</h4>

    <table class="table">
      <tbody>
        <tr>
          <td>Choosen Plan</td>
          <td class="choosen_plan text-right">{{ plan.name }}</td>
        </tr>
        <tr v-if="interval === 'month'">
          <td class="meals__text">5 meals per week</td>
          <td class="price text-right">{{ plan.price | to_currency }}</td>
        </tr>
        <tr v-else>
          <td class="meals__text">Price</td>
          <td class="price text-right">{{ totalCartPrice() | to_currency }}</td>
        </tr>
        <tr>
          <td>Shipping</td>
          <td class="shipping text-right">{{ plan.shipping_fee | to_currency }}</td>
        </tr>
      </tbody>
    </table>

    <h4>Delivery Summary</h4>
    <table class="table">
      <tbody>
        <tr class="d-none">
          <td>Delivery Schedule</td>
          <td class="delivery_schedule text-right"></td>
        </tr>
        <tr>
          <td>First Delivery Date</td>
          <td class="first_delivery_date text-right">{{ first_delivery_date }}</td>
        </tr>
      </tbody>
    </table>
    <hr>
    <div class="row clearfix">
      <div class="col">
        <strong>TOTAL</strong>
      </div>
      <div class="col">
        <strong class="total_price_summary float-right">{{ totalCartPricePlusShippingFee() | to_currency }}</strong>
      </div>
    </div>
    <hr>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-md-2">
    <button
      type="submit"
      name="commit"
      data-disable-with="Complete Sign Up"
      class="btn btn-brown text-uppercase complete-orders-btn px-4"
      v-on:click.prevent="createToken"
    >
      Complete Sign Up
    </button>
  </div>
</div>
