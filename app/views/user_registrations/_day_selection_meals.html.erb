<div class="row">
  <div class="col-md-9">
    <ul class="nav nav-tabs mb-4" role="tablist" id="meal-selection-tab">
      <li class="nav-item">
        <a href="#day-1" class="nav-link day-1 active" data-toggle="tab" role="tab" aria-controls="day-1" aria-selected="true">
          Monday
        </a>
      </li>
      <li class="nav-item">
        <a href="#day-2" class="nav-link day-2" data-toggle="tab" role="tab" aria-controls="day-2" aria-selected="false">
          Tuesday
        </a>
      </li>
      <li class="nav-item">
        <a href="#day-3" class="nav-link day-3" data-toggle="tab" role="tab" aria-controls="day-3" aria-selected="false">
          Wednesday
        </a>
      </li>
      <li class="nav-item">
        <a href="#day-4" class="nav-link day-4" data-toggle="tab" role="tab" aria-controls="day-4" aria-selected="false">
          Thursday
        </a>
      </li>
      <li class="nav-item">
        <a href="#day-5" class="nav-link day-5" data-toggle="tab" role="tab" aria-controls="day-5" aria-selected="false">
          Friday
        </a>
      </li>
    </ul>

    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="day-1" role="tabpanel" aria-labelledby="day-1-tab" data-meal-schedule="monday">
        <%= render 'meals', categorized_menus: categorized_menus %>
      </div>
      <div class="tab-pane fade" id="day-2" role="tabpanel" aria-labelledby="day-2-tab" data-meal-schedule="tuesday">
        <%= render 'meals', categorized_menus: categorized_menus %>
      </div>
      <div class="tab-pane fade" id="day-3" role="tabpanel" aria-labelledby="day-3-tab" data-meal-schedule="wednesday">
        <%= render 'meals', categorized_menus: categorized_menus %>
      </div>
      <div class="tab-pane fade" id="day-4" role="tabpanel" aria-labelledby="day-4-tab" data-meal-schedule="thursday">
        <%= render 'meals', categorized_menus: categorized_menus %>
      </div>
      <div class="tab-pane fade" id="day-5" role="tabpanel" aria-labelledby="day-5-tab" data-meal-schedule="friday">
        <%= render 'meals', categorized_menus: categorized_menus %>
      </div>
    </div>
  </div>

  <div class="col-md-3 meal-sidebar">
    <div class="row">
      <div class="col">
        <h5 class="text-uppercase">Your Meals</h5>
      </div>
      <div class="col">
        <a href="javascript:void(0)" class="btn btn-outline-dark btn-sm">Hide Meals</a>
      </div>
    </div>
    <hr>
    <div class="row order-field">
      <div class="col">
        <div class="order-list"></div>
      </div>
      <script id="order-template" type="text/x-template">
        <h6 class="text-upperclass order-title"></h6>
        <table class="order-table table table-sm">
          <tbody></tbody>
        </table>
        <hr>
        <div>
          <h6 class="font-weight-bold">Total <span class="meal-total float-right"></span></h6>
        </div>
      </script>

      <script type="text/x-template" id="order-list-template">
        <table class="table table-sm">
          <tbody>
            <tr class="order-list-items">
              <td class="meal-name border-0 text-left"></td>
              <td class="meal-counter border-0 text-center">
                <a href="javascript:void(0)" class="remove-meal">-</a>
                <span class="meal-count"></span>
                <a href="javascript:void(0)" class="add-meal">+</a>
              </td>
              <td class="meal-price border-0 text-right"></td>
            </tr>
          </tbody>
        </table>
      </script>
    </div>
    <hr>
    <div class="row justify-content-center">
      <div class="col">
        <a href="javascript:void(0)" class="btn btn-brown disabled btn--save-meal-plan">
        Save Meal Plan
      </a>
      </div>
    </div>
  </div>
</div>