<div class="fullwidth-bg" style="background-image: url('<%= asset_pack_path "packs/images/login_bg.jpg" %>')">
  <div class="fishnet">
    <div class="login-form">
      <div class="row align-items-center justify-content-center mx-0">
        <div class="col-6">
          <h4 class="text-center text-uppercase font-family-montserrat">Log In</h4>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.email_field :email, autofocus: true, class: 'form-control rounded-0 mb-3 login-control', placeholder: 'Email' %>
            </div>

            <div class="field">
              <%= f.password_field :password, autocomplete: "off", class: 'form-control rounded-0 mb-2 login-control', placeholder: 'Password' %>
            </div>

            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <div class="field mb-3">
                <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'font-size-12 chocolate-font-color' %><br />
              </div>
            <% end -%>

            <% if false #devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>
            <div class="actions mx-auto col-6">
              <%= f.submit "Log in", class: 'text-uppercase btn btn-brown px-4' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>